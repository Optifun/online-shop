@using OnlineShop.Core.DTO

<MudContainer Class="d-flex flex-wrap gap-4" MaxWidth="MaxWidth.Large">
    @foreach (var product in Products)
    {
        <ProductCardView ReadOnly="@ReadOnly" Product=@product/>
    }
</MudContainer>

@code {

    [Parameter]
    public List<ProductCard> Products { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = true;

}