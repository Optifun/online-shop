@using OnlineShop.Core.DTO

<MudContainer Class="d-flex flex-wrap py-8" MaxWidth="MaxWidth.Large">
    <MudGrid>
        @if (Products == null)
        {
            for (int i = 0; i < 6; i++)
            {
                <MudItem xs="4">
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="400px" Height="290px"/>
                </MudItem>
            }
        }
        else
        {
            @foreach (var product in Products)
            {
                <MudItem xs="4">
                    <ProductCardView ReadOnly="@ReadOnly" Product="@product"/>
                </MudItem>
            }
        }
    </MudGrid>
</MudContainer>

@code {

    [Parameter]
    public List<ProductCard>? Products { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = true;

}