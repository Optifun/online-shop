@using OnlineShop.Core.Model

<MudContainer Class="d-flex flex-wrap gap-4" MaxWidth="MaxWidth.Large">
    @foreach (var product in Products)
    {
        <ProductCard ReadOnly="@ReadOnly" Product=@product/>
    }
</MudContainer>

@code {

    [Parameter]
    public List<Product> Products { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = true;

}